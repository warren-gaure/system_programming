<UserControl x:Class="LivrableMVVM.View.Options"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LivrableMVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions> 
        <StackPanel Grid.Column="0" Margin="0,0,5,5">
                    <TextBlock Text="Put your target path right here" FontWeight="Medium"  FontSize="15" Margin="3,0"/>
                    <TextBox Padding="1"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="5,15,0,5">
                    <TextBlock Text="Foalder Name" FontWeight="Medium"  FontSize="1" Margin="3,0" Width="209"/>
            <TextBox IsReadOnly="True" Background="#eee" Padding="1" Width="208"/>
        </StackPanel>

        <TextBlock Text="Basic Folder" Grid.Row="1" FontWeight="Bold" FontSize="15" Margin="6,0,0,0"/>
        <ComboBox Padding="1" Grid.Row="1" RenderTransformOrigin="0.5,0.5" Margin="10,25,100,8">
            <ComboBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.473"/>
                    <TranslateTransform/>
                </TransformGroup>
            </ComboBox.RenderTransform>
            <ComboBoxItem>choix1</ComboBoxItem>
            <ComboBoxItem>choix432</ComboBoxItem>

            <ComboBoxItem>choix13</ComboBoxItem>
        </ComboBox>


    </Grid>
</UserControl>
